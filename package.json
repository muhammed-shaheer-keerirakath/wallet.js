{
  "name": "@theqrl/wallet.js",
  "version": "0.1.3",
  "description": "The QRL wallet.js library",
  "keywords": [
    "wallet",
    "dilithium",
    "xmss",
    "post-quantum",
    "cryptography"
  ],
  "author": "QRL contributors <info@theqrl.org> (https://theqrl.org)",
  "homepage": "https://github.com/theQRL/wallet.js#readme",
  "license": "MIT",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/mjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "test": "mocha",
    "build": "tsc && rollup src/index.js --file ./dist/cjs/index.js --format cjs && rollup src/index.js --file ./dist/mjs/index.js --format esm && ./fixup",
    "lint-check": "eslint 'src/**/*.js' 'test/**/*.js'",
    "lint": "eslint --fix 'src/**/*.js' 'test/**/*.js'",
    "report-coverage": "c8 --reporter=text-lcov npm run test > coverage.lcov",
    "coverage": "c8 npm run test"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theQRL/wallet.js.git"
  },
  "bugs": {
    "url": "https://github.com/theQRL/wallet.js/issues"
  },
  "dependencies": {
    "@noble/hashes": "^1.5.0",
    "@theqrl/dilithium5": "^0.0.9",
    "@theqrl/xmss": "^0.1.0",
    "randombytes": "^2.1.0",
    "sha3": "^2.1.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "codecov": "^3.8.3",
    "eslint": "^8.37.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7",
    "rollup": "^4.9.5",
    "typescript": "^5.5.4"
  }
}
